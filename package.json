{
  "name": "ondrip-web-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@chakra-ui/react": "^2.2.4",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@walletconnect/web3-provider": "^1.7.8",
    "ethers": "^5.6.9",
    "framer-motion": "4.1.17",
    "lit-js-sdk": "^1.1.199",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0",
    "web3modal": "^1.9.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typechain-gen": "typechain --target ethers-v5 --out-dir src/contracts './src/contracts/abis/*.json'",
    "graphql-gen": "apollo service:download --endpoint=https://api.thegraph.com/subgraphs/name/thisisommore/ondrip-subgraph ./src/graph-ql/graphql-schema.json && apollo codegen:generate --localSchemaFile=./src/graph-ql/graphql-schema.json --target=typescript --tagName=gql",
    "codegen": "yarn typechain-gen && yarn graphql-gen"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.1.0",
    "@types/graphql": "^14.5.0",
    "apollo": "^2.34.0",
    "typechain": "^8.1.0"
  }
}
